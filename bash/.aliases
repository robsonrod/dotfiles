# git alias
alias gcl='git clone'
alias ga='git add'
alias gaa='git add --all'
alias gs='git status'
alias gb='git checkout -b'
alias gd='git diff'
alias gl="git log --graph --pretty=format:'%C(bold)%h%Creset%C(magenta)%d%Creset %s %C(yellow)<%an> %C(cyan)(%cr)%Creset' --abbrev-commit --date=relative"
alias gcmt='git commit -v -m'
alias grm='git rm'
alias gfth='git fetch --all --prune --verbose'
alias grst='git reset HEAD'
alias gmrg="git merge"
alias gpll='git pull'
alias gplp='git pull && git push'
alias gpsh='git push'
alias gcll='git clean -xfd'
alias gbcm='git branch -m'
alias gbcd='git branch -D'
alias gchm='git checkout master'
alias glgs="glgr --stat"
alias gstb="git stash branch"
alias gstd="git stash drop"
alias gstl="git stash list"
alias gstp="git stash pop"

# general aliases
alias c='clear'
alias e='exit'
alias g='git'
alias h='history'
alias nv='emacs -nw'
alias em='emacs -nw'
if [ -x "$(command -v zoxide)" ]; then
	alias cd='z'
	alias cdi='zi'
else
	alias cd='cd'
fi
alias open='xdg-open'

# system admin
if [ "$OS_ID" == "arch" ]; then
	alias i='sudo pacman -Sy'
	alias u='sudo pacman -Syy'
	alias up='sudo pacman -Suy '
	alias r='sudo pacman -Rs'
	alias cat='bat'
else
	alias i='sudo apt-get install'
	alias u='sudo apt-get update'
	alias up='sudo apt-get upgrade'
	alias r='sudo apt-get remove'
	alias cat='batcat'
	alias fd='fdfind'
fi

alias ..='cd ..'
alias 2.='cd ../..'
alias 3.='cd ../../..'
alias 4.='cd ../../../..'
alias 5.='cd ../../../../..'

if [ -x "$(command -v exa)" ]; then
	alias l='exa -l --color=always --group-directories-first'
	alias ls='exa --color=always --group-directories-first'
	alias la='exa -la --color=always --octal-permissions --group-directories-first -g --icons'
	alias ll='exa -l --color=always --octal-permissions --group-directories-first'
	alias tree='exa --tree'
else
	alias l='ls'
	alias ls='ls -l'
	alias la='ls -la'
	alias ll='ls -la'
fi

alias cp="cp -i"
alias mv='mv -i'
alias rm='rm -i'
alias gh='history|grep'
alias mnt="mount | awk -F' ' '{ printf \"%s\t%s\n\",\$1,\$3; }' | column -t | egrep ^/dev/ | sort"
alias cpv='rsync -ah --info=progress2'

## other aliases
alias tkill='tmux kill-server'
alias rebuildx='xrdb ~/.Xresources'
alias reload='exec $BASH'

# check aliases
RED="\e[31m"
GREEN="\e[32m"
CYAN="\e[36m"
BLUE="\e[34m"
PURPLE="\e[35m"
ENDCOLOR="\e[0m"
alias ec='echo -e "${RED} $?"'
alias path='echo -e "${GREEN} $PATH"'

#dotfiles
alias cdot="cd ${DOTFILES}"
